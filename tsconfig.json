{
  "include": ["server/**/*.ts"],
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "preserve",
    "noEmit": true,
    "lib": ["ESNext"],

    "baseUrl": ".",
    "paths": {
      "@server/*": ["./server/*"],
      "@shared/*": ["./server/shared/*"]
    }
  }
}
